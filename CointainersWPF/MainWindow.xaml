<Window x:Class="CointainersWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CointainersWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas>
        <Button x:Name="ButtonName" Content="WrapPanel" Canvas.Left="300" Canvas.Top="20" Height="50" Width="200" Click="ButtonName_Click"/>
        <Button x:Name="ButtonStackPanel" Content="StackPanel" Canvas.Left="300" Canvas.Top="80" Height="50" Width="200" Click="ButtonStackPanel_Click"/>
        <Button x:Name="WindowDockPanel" Content="DockPanel" Canvas.Left="300" Canvas.Top="140" Height="50" Width="200" Click="Button_Click"/>
        <Button Content="WindowGrid" Canvas.Left="300" Canvas.Top="200" Width="200" Height="50" Click="Button_Click_1"/>

    </Canvas>
</Window>
